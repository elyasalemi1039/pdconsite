// Prisma schema for local SQLite asset store
// Security note: Do not commit the SQLite DB to version control
// The DB will hold only metadata and link to external URLs

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Asset {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  filename     String
  publicUrl    String
  contentType  String
  alt          String?
  tag          String?

  @@index([tag])
}

model Product {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  code           String   @unique
  areaId         String
  area           Area     @relation(fields: [areaId], references: [id])
  description    String
  productDetails String?
  price          Decimal? @db.Decimal(10, 2)
  imageUrl       String
  link           String?
  keywords       String?
}

model Area {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  name      String    @unique
  products  Product[]
}


